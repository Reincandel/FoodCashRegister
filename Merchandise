package Food;

/**
 *
 * Declare the variables
 */
public class Merchandise {

    private String nameOfMerchandise;
    private String size;
    private double unitPrice;
    private int quantity;

    /**
     * initialize the constructors
     * @param nameOfMerchandise
     * @param size
     * @param unitPrice
     * @param quantity 
     */
    public Merchandise(String nameOfMerchandise, String size, double unitPrice, int quantity) {
        this.nameOfMerchandise = nameOfMerchandise;
        this.size = size;
        this.unitPrice = unitPrice;
        this.quantity = quantity;
    }
    
    /**
     * get the name 
     * @return 
     */
    public String getNameOfMerchandise() {
        return nameOfMerchandise;
    }

    /**
     * set the name
     * @param nameOfMerchandise 
     */
    public void setNameOfMerchandise(String nameOfMerchandise) {
        this.nameOfMerchandise = nameOfMerchandise;
    }

    /**
     * get the size
     * @return 
     */
    public String getSize() {
        return size;
    }

    /**
     * set the size
     * @param size 
     */
    public void setSize(String size) {
        this.size = size;
    }

    /**
     * get the price
     * @return 
     */
    public double getUnitPrice() {
        return unitPrice;
    }

    /**
     * get the unit price
     * @param unitPrice 
     */
    public void setUnitPrice(double unitPrice) {
        this.unitPrice = unitPrice;
    }

    /**
     * get the quantity
     * @return 
     */
    public int getQuantity() {
        return quantity;
    }

    /**
     * set the quantity
     * @param quantity 
     */
    public void setQuantity(int quantity) {
        this.quantity = quantity;
    }

    /**
     * print toString
     * @return 
     */
    @Override
    public String toString() {
        return "Merchandise{"
                + "nameOfMerchandise=" + nameOfMerchandise
                + ", size=" + size + ", unitPrice=" + unitPrice
                + ", quantity=" + quantity + '}';
    }
}
